@model Biblioteka.Models.Knjiga

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<script>
    <script src="../../Scripts/jquery-1.3.2.min.js" language="javascript" type="text/javascript"/>
    <script src="../../Scripts/jquery-ui-1.7.1.custom.min.js" type="text/javascript"/>
</script>
<h4>Knjiga</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("RegistrujKnjigu", "Knjige", FormMethod.Post))
        {
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="naslov" class="control-label"></label>
                    @Html.TextBox("Naziv", null, new { @class = "form-control" })
                    <span asp-validation-for="naslov" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="autor" class="control-label"></label>
                    @Html.TextBox("Autor", null, new { @class = "form-control" })
                    <span asp-validation-for="autor" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="broj_stranica" class="control-label"></label>
                    @Html.TextBox("broj_stranica", null, new { @class = "form-control", @type = "number", placeholder = "0" })
                    <span asp-validation-for="broj_stranica" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="datum_izdavanja" class="control-label"></label>
                    @Html.TextBox("datum", null, new { @class = "form-control", placeholder = "YYYY/MM/DD" })
                    <span asp-validation-for="datum_izdavanja" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="kolicina" class="control-label"></label>
                    @Html.TextBox("Kolicina", null, new { @class = "form-control", @type = "number", placeholder = "0" })
                    <span asp-validation-for="kolicina" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="opis" class="control-label"></label>
                    @Html.TextBox("Opis", null, new { @class = "form-control" })
                    <span asp-validation-for="opis" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Jezik</label>
                    <select id="jezici" name="jezik" class="form-control" multiple>
                        @foreach (string item in ViewBag.Jezici)
                        {
                            <option value="@item">@item</option>
                        }
                    </select>
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Zanr</label>
                    <select name="Zanr" id="zanrovi" class="form-control" multiple>
                        @foreach (string item in ViewBag.Zanrovi)
                        {
                            <option value="@item">@item</option>
                        }
                    </select>
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        }
        <link href="~/Content/themes/base/jquery-ui.min.js" rel="stylesheet" />

    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}